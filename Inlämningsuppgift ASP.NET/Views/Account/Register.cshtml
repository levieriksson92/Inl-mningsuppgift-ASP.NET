
@model RegisterViewModel
@{
	ViewData["Title"] = "Become a Member";
}
<div class="d-flex justify-content-center">
	<h4>Become a Member</h4>
</div>
<form method="post" class="container mt-4 " novalidate>
	<div asp-validation-summary="ModelOnly"></div>


	<div class="mb-3 d-flex justify-content-center">
		<input asp-for="FirstName" placeholder="FirstName" />
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<input asp-for="LastName" placeholder="LastName" />
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>


	<div class="mb-3 d-flex justify-content-center">
		<input asp-for="Email" placeholder="Email" />
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<input asp-for="Password" placeholder="Password" />
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<input asp-for="ConfirmPassword" placeholder="Confirm password" />
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<span asp-validation-for="ConfirmPassword" id="password-confirm-label" class="text-danger"></span>
	</div>

	<div class="d-flex justify-content-center">
		<button class="btn-theme" type="submit">REGISTER</button>
	</div>

	<div class="registration-form-link d-flex justify-content-center">
		<span class="me-2">Already have an Account?</span>
		<a asp-action="Login">Login here</a>
	</div>
</form>