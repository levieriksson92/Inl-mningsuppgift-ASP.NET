﻿
@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}
<div class="d-flex justify-content-center">
    <h4>Log in</h4>
</div>

<form method="post" class=" mt-4 justify-content-center" novalidate>
    <div asp-validation-summary="ModelOnly"></div>

    <div class="mb-3 d-flex justify-content-center">
        <input asp-for="Email" placeholder="Email" />
    </div>
    <div class="mb-3 d-flex justify-content-center">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3 d-flex justify-content-center">
        <input asp-for="Password" placeholder="Password" />
    </div>
    <div class="mb-3 d-flex justify-content-center">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn-theme" type="submit">LOGIN</button>
    </div>
    <div class="registration-form-link d-flex justify-content-center">
        <span class="me-2">´Don't' have an Account?</span>
        <a asp-action="Register">Register an account here</a>
    </div>
</form>