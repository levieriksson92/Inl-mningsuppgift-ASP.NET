@model CreateProductViewModel


<div class="d-flex justify-content-center">
	<h4>Create new product</h4>
</div>
<form method="post" class="container mt-4 " novalidate>
	<div asp-validation-summary="ModelOnly"></div>


	<div class="mb-3 d-flex justify-content-center">
		<input asp-for="Title" placeholder="Title" />
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<input asp-for="Description" placeholder="Description" />
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>


	<div class="mb-3 d-flex justify-content-center">
		<input asp-for="Price" placeholder="Price" />
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<input asp-for="ImageUrl" placeholder="ImageUrl" />
	</div>

	<div class="mb-3 d-flex justify-content-center">
		<span asp-validation-for="ImageUrl" class="text-danger"></span>
	</div>

	<div class="d-flex justify-content-center">
		<label>Choose a category</label>
	</div>
	<div class="d-flex justify-content-center mb-5">
		@Html.DropDownListFor(m => m.SelectedCategory, new SelectList(Model.Categories,"Id", "CategoryName"))
	</div>

	<div class="d-flex justify-content-center">
		<label>Choose a tag</label>
	</div>
	<div class="d-flex justify-content-center mb-5">
		@Html.DropDownListFor(m => m.SelectedTag, new SelectList(Model.Tags, "Tag"))
	</div>

	<div class="d-flex justify-content-center">
		<button class="btn-theme" type="submit">CREATE PRODUCT</button>
	</div>

</form>
